@model LibraryManagmentSystem.ViewModel.BookViewModel


<div class="container">
    <div class="card">

        <h3 class="card-header">Create new Book</h3>
        <form asp-controller="Book" asp-action="Create" enctype="multipart/form-data"
              method="post" class="form-horizontal" role="form">
            <div class="card-body form-group">
                <label asp-for="Title" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Title" class="form-control" placeholder="Enter book Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <label asp-for="Description" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Description" class="form-control" placeholder="Enter book Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <label asp-for="Author" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Author" class="form-control" placeholder="Enter book Author" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <label asp-for="Inventory" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Inventory" class="form-control" placeholder="Enter book Quantity" />
                    <span asp-validation-for="Inventory" class="text-danger"></span>
                </div>
                <label asp-for="PhotoVM" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="PhotoVM" class="form-control" />
                    <span asp-validation-for="PhotoVM" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group card-footer">
                <div class="btn-group">
                    <button class="btn btn-outline-danger btn-rounded" type="submit" asp-controller="Book" asp-action="Index">Cancel</button>
                    <button class="btn btn-outline-success btn-rounded" type="submit">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>