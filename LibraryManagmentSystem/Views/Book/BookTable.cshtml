@using LibraryManagmentSystem.ViewModel;
@using LibraryManagmentSystem.Data.Model;
@model IEnumerable<Book>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Member" asp-action="Create">Create new Member</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Inventory</th>
            <th>Borrowers</th>
            <th>Edit Book</th>
            <th>Delete Book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Book in Model)
        {
            <tr>
                <td>@Book.BookID</td>
                <td>@Book.Title</td>
                <td>@Book.Description</td>
                <td>@Book.Author</td>
                <td>@Book.Inventory</td>
                <td>@Book.Borrower</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Update" asp-route-id="@Book.BookID">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Book" asp-action="Delete" asp-route-id="@Book.BookID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>