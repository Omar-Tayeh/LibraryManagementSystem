﻿@using LibraryManagmentSystem.Data.Model
@model LibraryManagmentSystem.ViewModel.BookViewModel

<div class="container">
    <div class="card">

        <h3 class="card-header">Edit Book: @Model.Title</h3>
        <form asp-controller="book" asp-action="Update" method="post" enctype="multipart/form-data" class="form-horizontal" role="form">
            @Html.HiddenFor(m => Model.BookID)
            <div class="card-body form-group">
                <label asp-for="Title" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <label asp-for="Description" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <label asp-for="Author" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Author" class="form-control" />

                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <label asp-for="Inventory" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Inventory" class="form-control" />
                    <span asp-validation-for="Inventory" class="text-danger"></span>
                </div>
                <label asp-for="ExistingImage" class="col-md-4 control-label"></label>
                <div class="form-control col-md-6">
                    <img src="~/Images/@Model.ExistingImage" class="img-fluid" width="80" asp-append-version="true" />
                    <span asp-validation-for="ExistingImage" class="text-danger"></span>
                </div>
                <div class="form-control col-md-6">
                    <label class="form-control col-md-4">Change Image, Browse for an Image...</label>
                    <input asp-for="PhotoVM" class="form-control" />
                    <span asp-validation-for="PhotoVM" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group col-md-offset-2 col-md-4">
                    <button class="btn btn-outline-danger btn-rounded mb-2" type="submit" value="Cancel" asp-controller="Book" asp-action="Index">Cancel</button>
                    <button class="btn btn-outline-success btn-rounded mb-2" type="submit" value="Update">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>