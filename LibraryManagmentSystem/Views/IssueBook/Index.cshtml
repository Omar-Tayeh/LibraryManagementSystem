@using LibraryManagmentSystem.Data.Model;
@model IEnumerable<Book>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Authors name</th>
            <th>Issue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model)
        {
            <tr>
                <td>@book.BookID</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td><a class="btn btn-success" asp-area="" asp-controller="IssueBook" asp-action="Issue" asp-route-bookId="@book.BookID">Issue</a></td>
            </tr>
        }
    </tbody>
</table>