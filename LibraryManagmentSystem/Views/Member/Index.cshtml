@using LibraryManagmentSystem.ViewModel;
@model IEnumerable<MemberViewModel>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Member" asp-action="Create">Create new Member</a>

<form asp-action="Index">
    <div class="input-group md-form form-sm form-2 pl-0">
        <input name="search" class="form-control my-0 py-1 red-border" type="text" placeholder="Search">
        <div class="input-group-append">
            <span class="input-group-text" id="js-search">
                <i class="fas fa-search text-grey"></i>
            </span>
        </div>
    </div>
</form>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>StudentID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Borrowed books count</th>
            <th>Edit Member</th>
            <th>Delete Member</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var MemberVM in Model)
        {
            <tr>
                <td>@MemberVM.Member.MemberID</td>
                <td>@MemberVM.Member.StudentID</td>
                <td>@MemberVM.Member.MemberName</td>
                <td>@MemberVM.Member.Email</td>
                <td>@MemberVM.Member.Address</td>
                <td>@MemberVM.BookCount</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Member" asp-action="Update" asp-route-id="@MemberVM.Member.MemberID">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Member" asp-action="Delete" asp-route-id="@MemberVM.Member.MemberID">Delete</a></td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <script>
        $(function () {
            $("#js-search").click(function () {
                $("Form").submit();
            })
        });
    </script>
}