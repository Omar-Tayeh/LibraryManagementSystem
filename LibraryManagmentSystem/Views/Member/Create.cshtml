@model LibraryManagmentSystem.Data.Model.Member
<div class="container">
<div class="card col-md-8 text-center m-1">
    <div>
    <form asp-controller="Member" asp-action="Create" method="post" class="form-horizontal" role="form">
            <div class="card-body m-1">
                <h3 class="card-title">Create new Member</h3>
        <div class="form-group ml-">
            <label asp-for="StudentID" class="col-md-4 control-label">Student ID</label>
            <div class="col-md-4">
                <input asp-for="StudentID" class="form-control" placeholder="Student ID" />
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <label asp-for="MemberName" class="col-md-4 control-label">Name</label>
            <div class="col-md-4">
                <input asp-for="MemberName" class="form-control" placeholder="Member Name" />
                <span asp-validation-for="MemberName" class="text-danger"></span>
            </div>
            <label asp-for="Email" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Email" class="form-control" placeholder="Member Name" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <label asp-for="Address" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Address" class="form-control" placeholder="Member Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        </div>
        <div class="form-group card-footer">
            <div class="btn-group col-md-offset-2 col-md-6">
                <button class="btn btn-outline-danger btn-rounded close mb-2" type="submit" value="Cancel" asp-controller="Member" asp-action="Index">
                        Cancel <i class="fa fa-close"></i>
                </button>
                <button type="submit" value="Create" class="btn btn-outline-success btn-rounded mb-2">
                    Create <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
    </form>
    </div>
</div>
</div>