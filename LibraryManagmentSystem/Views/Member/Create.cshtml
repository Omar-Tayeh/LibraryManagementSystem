@model LibraryManagmentSystem.Data.Model.Member
<div class="container">
    <div class="card col-md-6 m-1">
        <form asp-controller="Member" asp-action="Create" method="post" class="form-horizontal" role="form">
            <h3 class="card-header">Create new Member</h3>
            <div class="card-body form-group ml-4">
                <label asp-for="StudentID" class="col-md-4 control-label">Student ID</label>
                <div class="col-md-6">
                    <input asp-for="StudentID" class="form-control" placeholder="Student ID" />
                    <span asp-validation-for="StudentID" class="text-danger"></span>
                </div>
                <label asp-for="MemberName" class="col-md-4 control-label">Name</label>
                <div class="col-md-6">
                    <input asp-for="MemberName" class="form-control" placeholder="Member Name" />
                    <span asp-validation-for="MemberName" class="text-danger"></span>
                </div>
                <label asp-for="Email" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Email" class="form-control" placeholder="Member Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <label asp-for="Address" class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <input asp-for="Address" class="form-control" placeholder="Member Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group card-footer">
                <div class="btn-group col-md-offset-2 col-md-4">
                    <button class="btn btn-outline-danger btn-rounded mb-2" type="submit" value="Cancel" asp-controller="Member" asp-action="Index">Cancel</button>
                    <button type="submit" class="btn btn-outline-success btn-rounded mb-2">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>